            <binarygame.zxdmjr.com.binarygame.CustomTextView
                android:text="The left-most box represents the most significant bit, while the right-most box is the least significant bit."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHTPRowMsg"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Holo.TextView"
                android:textStyle="italic"
                android:textColor="@android:color/background_dark"
                android:textColorHighlight="@android:color/black" />

            <binarygame.zxdmjr.com.binarygame.CustomTextView
                android:text="For example, if we have found the decimal number 13 to the right of a row of bits, those some bits should look like this:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHTPRowMsg2"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Holo.TextView"
                android:textStyle="italic"
                android:textColor="@android:color/background_dark"
                android:textColorHighlight="@android:color/black" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <binarygame.zxdmjr.com.binarygame.CustomButton
                    android:text="8"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnHTPE8"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/bg_rounded_corner_2"
                    android:layout_margin="2dp" />

                <binarygame.zxdmjr.com.binarygame.CustomButton
                    android:text="4"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnHTPE4"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/bg_rounded_corner_2"
                    android:layout_margin="2sp" />

                <binarygame.zxdmjr.com.binarygame.CustomButton
                    android:text="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnHTPE2"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:background="@drawable/bg_rounded_corner"
                    android:layout_margin="2dp" />

                <binarygame.zxdmjr.com.binarygame.CustomButton
                    android:text="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnHTPE1"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless"
