                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp" />

            <binarygame.zxdmjr.com.binarygame.CustomTextView
                android:text="Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHTPMsgMedium"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <binarygame.zxdmjr.com.binarygame.CustomTextView
                android:text="32-16-8-4-2-1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHTPMedium"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <binarygame.zxdmjr.com.binarygame.CustomTextView
                android:text="Hard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHTPMsgHard"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <binarygame.zxdmjr.com.binarygame.CustomTextView
                android:text="128-64-32-16-8-4-2-1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHTPHard"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
