<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#008080"
    tools:context="binarygame.zxdmjr.com.binarygame.MainActivity">

    <binarygame.zxdmjr.com.binarygame.CustomButton
        android:text="Decimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/btnDecimal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_selector" />

    <binarygame.zxdmjr.com.binarygame.CustomButton
        android:text="HexaDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHexaDecimal"
        android:layout_below="@+id/btnDecimal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_selector"
        android:layout_marginTop="10dp" />

    <binarygame.zxdmjr.com.binarygame.CustomButton
        android:text="Octal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOctal"
        android:layout_below="@+id/btnHexaDecimal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_selector"
        android:layout_marginTop="10dp" />

    <binarygame.zxdmjr.com.binarygame.CustomButton
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSettings"
        android:layout_below="@+id/btnOctal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_selector"
        android:layout_marginTop="10dp" />

    <binarygame.zxdmjr.com.binarygame.CustomButton
        android:text="How to Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHowToPlay"
        android:layout_below="@+id/btnSettings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_selector"
        android:layout_marginTop="10dp" />

    <binarygame.zxdmjr.com.binarygame.CustomButton
        android:text="About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAbout"
        android:layout_below="@+id/btnHowToPlay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_selector"
        android:layout_marginTop="10dp" />


</RelativeLayout>
