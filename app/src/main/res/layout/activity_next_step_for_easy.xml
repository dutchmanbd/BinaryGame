<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_next_step_for_easy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="binarygame.zxdmjr.com.binarygame.NextStepForEasy">

    <binarygame.zxdmjr.com.binarygame.CustomTextView
        android:text="Congratulations!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvCongrtulations"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <binarygame.zxdmjr.com.binarygame.CustomTextView
        android:text="Your current time for this Easy round is:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCongrtulations"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/tvCurrentTimeText"
        android:gravity="center"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:ignore="HardcodedText" />

    <binarygame.zxdmjr.com.binarygame.CustomTextView
        android:text="Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/tvCurrentTimeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <binarygame.zxdmjr.com.binarygame.CustomTextView
        android:text="Your total time for this Easy round is:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCurrentTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/tvTimeText"
        android:gravity="center"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat"
        tools:ignore="HardcodedText" />

    <binarygame.zxdmjr.com.binarygame.CustomTextView
        android:text="Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTotalTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/tvTimeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <binarygame.zxdmjr.com.binarygame.CustomTextView
        android:text="New Best Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/tvNewBestTime"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@+id/tvTotalTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <binarygame.zxdmjr.com.binarygame.CustomButton
        android:text="Base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:id="@+id/btnExit"
        android:layout_alignBaseline="@+id/btnReplay"
        android:layout_alignBottom="@+id/btnReplay"
        android:layout_toRightOf="@+id/btnReplay"
        android:layout_toEndOf="@+id/btnReplay"
        android:background="@drawable/bg_rounded_corner_exit"
        tools:ignore="HardcodedText" />

    <ImageView
        app:srcCompat="@mipmap/ic_winner_logo"
        android:id="@+id/imgView"
        tools:ignore="ContentDescription"
        android:layout_width="match_parent"
        android:layout_below="@+id/tvNewBestTime"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp" />

    <binarygame.zxdmjr.com.binarygame.CustomButton
        android:text="Replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:id="@+id/btnReplay"
        android:background="@drawable/bg_rounded_corner_play"
        android:layout_marginBottom="85dp"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
